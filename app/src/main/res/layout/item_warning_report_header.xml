<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen8"
    android:layout_marginTop="@dimen/dimen8"
    android:layout_marginRight="@dimen/dimen8"
    android:background="@drawable/bg_black"
    android:orientation="horizontal"
    android:padding="@dimen/dimen12">

    <!--    -->
    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:orientation="vertical">-->
    <!--        -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">


        <com.ssoft.common.widget.CustomTextView
            android:textColor="@color/wi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/titleTypeTV"
            android:text="ปริมาณฝนสะสม"
            android:textSize="12sp" />
        <com.ssoft.common.widget.CustomTextView
            android:layout_marginTop="-2dp"

            android:textColor="@color/wi"
            android:id="@+id/totalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="XXX"
            android:textSize="28sp" />
        <com.ssoft.common.widget.CustomTextView
            android:layout_marginTop="-4dp"

            android:textColor="@color/wi"
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="XXX"
            android:textSize="@dimen/txt16" />
        <com.ssoft.common.widget.CustomTextView
            android:textColor="@color/wi"
            android:id="@+id/descTV"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="XXX" />
        <com.ssoft.common.widget.CustomTextView
            android:textColor="@color/wi"
            android:id="@+id/desc2TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:text="XXX" />


    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/icon"
            android:src="@drawable/rain_thunder"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

    </LinearLayout>


    <!--        </FrameLayout>-->


</LinearLayout>

