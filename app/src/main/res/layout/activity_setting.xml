<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.setting.SettingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_main">

        </View>


        <ImageView
            android:id="@+id/bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen24"
            android:src="@drawable/rain_1"
            app:tint="#173A7A" />

        <ImageView
            android:id="@+id/ss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tint="@color/grey" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dimen16">

            <com.ssoft.common.widget.CustomTextView
                android:id="@+id/titleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="ตั้งค่า"
                android:textColor="#fff"
                android:textSize="@dimen/txt16" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen24"
            android:layout_marginTop="66dp"
            android:layout_marginRight="@dimen/dimen24"
            android:layout_marginBottom="@dimen/dimen24"
            android:background="@drawable/bg_yel">

            <LinearLayout
                android:id="@+id/notiAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen12">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_music_and_multimedia"
                    app:tint="@color/wi" />

                <com.ssoft.common.widget.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen12"
                    android:layout_weight="1"
                    android:text="Notification"
                    android:textColor="@color/wi" />


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <com.ssoft.common.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OFF"
                        android:textColor="@color/wi"
                        android:textSize="10sp" />

                    <com.ssoft.common.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="ON"
                        android:textColor="@color/wi"
                        android:textSize="10sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swCustom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen16"
                        android:thumb="@drawable/switch_thumb"
                        app:track="@drawable/switch_track" />


                </FrameLayout>

            </LinearLayout>


        </FrameLayout>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>